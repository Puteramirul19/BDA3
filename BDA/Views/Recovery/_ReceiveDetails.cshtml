                                        <div class="col-sm-2 form-control-label align-items-center">Received Date<span
                                                class="text-danger ml-2">*</span></div>
                                        <div class="col-sm-4">
                                            <div class="input-group">
                                                @Html.TextBoxFor(x => x.PartialReceivedDate, new { @class = "form-control date", required = "required" })
