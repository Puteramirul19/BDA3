                                                    <i class="la la-calendar"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="col-sm-2 form-control-label d-flex align-items-center">Bank
                                            Statement<span class="text-danger ml-2">*</span></div>
                                        <div class="col-xl-4">
                                            @if (firstStatementBank == "" || firstStatementBank == null)
                                            {
                                                <div class="file-upload">
                                                    @Html.TextBoxFor(m => m.FirstParBankStatementVM.File, new { type = "file", name = "FirstParStatementBank" })
                                                </div>
                                            }
                                            else
                                            {
                                                var file = firstStatementBank;
                                                <div id="noFile-FirstParStatementBank" class="file-upload"
