    <div class="widget-header d-flex align-items-center" aria-expanded="true">
        <h3>
            Approval
        </h3>
    </div>
    <div id="pnl_approver" class="widget-body">
        <div class="padding-left-20 padding-right-20">
            <div class="form-group row">
                <div class="col-sm-12">
                    <div class="row">

                        <div class="col-lg-12 before-submit">
                            <label class="form-control-label">Approver<span class="text-danger ml-2">*</span></label>
                            @Html.DropDownListFor(x => x.ApproverId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", id = "ddlApprover", required = "required" })
                            @Html.HiddenFor(x => x.ApproverId)
                        </div>
                        <div id="afterSubmit" class="row after-submit" style="display:none">
                            <div class="col-lg-12">
                                <label class="form-control-label">Approver</label>
                                <p style="font-weight:bold">@ViewBag.ApproverId</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>