
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}
<div class="tab-content">
    <div class="tab-pane active" id="tab1">
        <div class="section-title mt-5 mb-5">
            <h4>Assign Role</h4>
        </div>
        <div class="form-group row mb-3">
            <div class="col-sm-12 mb-3">
                <label class="form-control-label">Role<span class="text-danger ml-2">*</span></label>
                <select id="ddlChooseRole" name="ddlChooseRole" class="selectpicker show-menu-arrow form-control" tabindex="-98">
                    <option value="1">Requestor</option>
                    <option value="2">Verifier</option>
                    <option value="3">Approver</option>
                </select>
            </div>
        </div>
        
        <div class="form-group row mb-3">
            <div class="col-sm-12 mb-3">
                <label class="form-control-label">Division<span class="text-danger ml-2">*</span></label>
                <select id="ddlChooseDiv" name="ddlChooseDiv" class="selectpicker show-menu-arrow form-control" tabindex="-98">
                    <option value="1">Finance</option>
                    <option value="2">Recon</option>
                    <option value="3">AD HQ</option>
                    <option value="4">DN (AD) - North</option>
                    <option value="5">DN (AD) - East</option>
                    <option value="6">DN (AD) - South</option>
                    <option value="7">DN (AD) - KL</option>
                    <option value="8">DN (AD) - Sel,Pj,Cj </option>
                    <option value="9">DN (O&M) - North</option>
                    <option value="10">DN (O&M) - South</option>
                    <option value="11">DN (O&M) - Sel,Pj,Cj </option>
                    <option value="12">Corporate</option>
                    <option value="13">Grid</option>
                </select>
            </div>
        </div>
        <div class="form-group row mb-3">
            <div class="col-sm-12 mb-3">
                <label class="form-control-label">Group<span class="text-danger ml-2">*</span></label>
                <select id="ddlChooseGroup" name="ddlChooseGroup" class="selectpicker show-menu-arrow form-control" tabindex="-98">
                    <option value="1">G1</option>
                    <option value="2">G2</option>
                    <option value="3">G3</option>
                </select>
            </div>
        </div>

        <div class="wizard text-center">
            <button type="button" id="btnSubmit" data-dismiss="tab-content" class="btn btn-success">Assign</button>
        </div>
    </div>
