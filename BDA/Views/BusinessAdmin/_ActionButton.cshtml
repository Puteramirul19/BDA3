                        <label class="form-control-label">Function<span class="text-danger ml-2">*</span></label>
                        <select id="ddlChooseFunc" name="ddlChooseFunc" class="selectpicker show-menu-arrow form-control" tabindex="-98">
                            <option value="All">All</option>
                            <option value="AD">DN (AD)</option>
                            <option value="OM">DN (O&M)</option>
                        </select>
                    </div>
                </div>
                <div id="pnlZoneAD" class="form-group row mb-3" style="display:none">
                    <div class="col-sm-12 mb-3">
                        <label class="form-control-label">Zone<span class="text-danger ml-2">*</span></label>
                        <select id="ddlChooseZoneAD" name="ddlChooseZoneAD" class="selectpicker show-menu-arrow form-control" tabindex="-98">
