@section Scripts{
    <script src="~/assets/vendors/js/tablefilter/jquery.tablefilter.js"></script>
    <script src="~/assets/vendors/js/tablefilter/jquery.tabledatafilter.min.js"></script>
    @*<script src="~/assets/vendors/js/tablefilter/jquery.tableditfixedheader.min.js"></script>*@
    <script>

        $(document).ready(function () {
            $(function () {
                $("nav").addClass("shrinked");
            });
          
                    var table = $('#tblInProgress').DataTable({
                    dom: "Bfrtip",
                        "processing": true,
                        "columnDefs": [
                            { className: "dt-body-right", "targets": [7] },
                        ],
                    //serverSide: true,
                    "ajax": {
                        url:  "@Url.Action("GetMyLost", "Application")",
                        type: "GET",
                        data: function (d) {
                            d.refNo = $('#search-refNo').val();
                            d.bdNo = $('#search-bdNo').val();
                            d.projectNo = $('#search-projNo').val();
                            d.nameOnBd = $('#search-nameOnBD').val();
                            d.requester = $('#search-requester').val();
                            d.coCode = $('#search-coCode').val();
                            d.BA = $('#search-BA').val();
                            d.bdAmount = $('#search-BDAmount').val();
                            d.Status = $('#search-status option:selected').val();
                            d.actionNeeded = $('#search-actionNeeded option:selected').val();
                        },
                        dataFilter: function (result) {
                            var jData = JSON.parse(result);
                            var dtData = JSON.stringify({ "data": jData });
                            return dtData;
                        }
                     },
                    order: [[1, 'asc']],
                    columns: [
                        { data: "refNo" },
                        { data: "bdNo" },
                        { data: "projectNo" },
                        { data: "nameOnBd" },
                        { data: "requester" },
                        { data: "coCode" },
                        { data: "ba" },
                        { data: "bdAmount" },
                        { data: "status" },
                        { data: "actionNeeded" },
                        {
                            data: "id",
                            "render": function (data, type, row) {
                                var id = data;
                                var href = "/Lost/Edit/" + id;
                                if (type == "display") {
                                    data = '<a href="' + href + '" style="border-radius: 0%;background-color: #f4f4f4;border-color: #ddd;" class="btn btn-lost btn-block mb-2">View</a>';
                                }
                                return data;
                            }
                        }
                    ],
                    "bPaginate": true,
                    "bLengthChange": false,
                    "bFilter": false,
                    "bInfo": true,
                    "bAutoWidth": false,
                    orderCellsTop: true,
                    fixedHeader: true,
                    "lengthChange": false,
            });

            $('#tblInProgress thead filterCol').appendTo('table thead');

            $.each($('.input-filter', table.table().header()), function () {
                var column = table.column($(this).index());

                $('input', this).on('keyup change', function () {
                    table.ajax.reload();
                });
            });

            $.each($('.select-filter', table.table().header()), function () {
                var column = table.column($(this).index());

                $('select', this).on('change', function () {
                    table.ajax.reload();
                });
            });

            $('#tblInProgress').dataTable.ext.errMode = 'throw';

                    var table2 = $('#tblCompleted').DataTable({
                    dom: "Bfrtip",
                        "processing": true,
                        "columnDefs": [
                            { className: "dt-body-right", "targets": [7] },
                        ],
                    //serverSide: true,
                    "ajax": {
                        url:  "@Url.Action("GetMyCompleteLost", "Application")",
                        type: "GET",
                        data: function (d) {
                            d.refNo = $('#search-refNo2').val();
                            d.bdNo = $('#search-BDNo2').val();
                            d.projectNo = $('#search-projNo2').val();
                            d.nameOnBd = $('#search-nameOnBD2').val();
                            d.requester = $('#search-requester2').val();
                            d.coCode = $('#search-coCode2').val();
                            d.ba = $('#search-BA2').val();
                            d.bdAmount = $('#search-BDAmount2').val();
                            d.Status = $('#search-status2 option:selected').val();
                            d.actionTaken = $('#search-actionTaken').val();
                        },
                        dataFilter: function (result) {
                            var jData = JSON.parse(result);
                            var dtData = JSON.stringify({ "data": jData });
                            return dtData;
                        }
                     },
                    order: [[1, 'asc']],
                    columns: [
                        { data: "refNo" },
                        { data: "bdNo" },
                        { data: "projectNo" },
                        { data: "nameOnBd" },
                        { data: "requester" },
                        { data: "coCode" },
                        { data: "ba" },
                        { data: "bdAmount" },
                        { data: "status" },
                        { data: "actionTaken" },
                        {
                            data: "id",
                            "render": function (data, type, row) {
                                var id = data;
                                var href = "/Lost/Edit/" + id;
                                if (type == "display") {
                                    data = '<a href="' + href + '" style="border-radius: 0%;background-color: #f4f4f4;border-color: #ddd;" class="btn btn-lost btn-block mb-2">View</a>';
                                }
                                return data;
                            }
                        }
                    ],
                    "bPaginate": true,
                    "bLengthChange": false,
                    "bFilter": false,
                    "bInfo": true,
                    "bAutoWidth": false,
                    orderCellsTop: true,
                    fixedHeader: true,
                    "lengthChange": false,
            });

            $('#tblCompleted thead filterCol').appendTo('table thead');

            $.each($('.input-filter', table2.table().header()), function () {
                var column = table2.column($(this).index());

                $('input', this).on('keyup change', function () {
                    table2.ajax.reload();
                });
            });

            $.each($('.select-filter', table2.table().header()), function () {
                var column = table2.column($(this).index());

                $('select', this).on('change', function () {
                    table2.ajax.reload();
                });
            });

            $('#tblCompleted').dataTable.ext.errMode = 'throw';
        });


    </script>
}