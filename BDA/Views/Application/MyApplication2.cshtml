@{
    ViewData["Title"] = "My Application";
    var reqWangCagaran1 = User.HasClaim("_permission", "RequestWangCagaranLess5M");
    var reqWangCagaran2 = User.HasClaim("_permission", "RequestWangCagaranMore5M");

    var reqWangHangus1 = User.HasClaim("_permission", "RequestWangHangusLess500K");
    var reqWangHangus2 = User.HasClaim("_permission", "RequestWangHangusMore500K");
}

@section Styles{

    <style>
        .btn-create {
            background-color: #5d5386;
            color: white;
        }

        .btn-apply:hover {
            background-color: white;
            color: black;
        }

        .btn-cancel:hover {
            background-color: red;
            color: white;
        }

        .btn-recover:hover {
            background-color: limegreen;
            color: white;
        }

        .btn-lost:hover {
            background-color: #FFC300;
            color: white;
        }

        select.filter {
            height: 33px !important;
        }
    </style>
}
<div class="content-inner">
    <div class="container-fluid">
        <!-- Begin Page Header-->
        <div class="row">
            <div class="page-header">
                <div class="d-flex align-items-center">
                    <h2 class="page-header-title">My Application</h2>
                    <div>
                        <!--<div class="page-header-tools">
                        <a class="btn btn-gradient-01" href="#">Add Widget</a>
                    </div>-->
                    </div>
                </div>
            </div>
        </div>
        <!-- End Page Header -->
        <!-- Begin Row -->
        <!-- End Row -->
        <!-- Begin Row -->
        <div class="row flex-row">
            @if (reqWangCagaran1 || reqWangCagaran2)
            {
                <div class="col-xl-3 col-md-6 col-sm-6">
                    <a id="btnCreateWC" href="/WangCagaran/Create" class="btn btn-create">Create Wang Cagaran</a>
                </div>
            }
            @if (reqWangHangus1 || reqWangHangus2)
            {
                <div class="col-xl-3 col-md-6 col-sm-6">
                    <a id="btnCreateWH" href="/WangHangus/Create" class="btn btn-create">Create Wang Hangus</a>
                </div>
            }
        </div>
        <br />
        <div class="row flex-row">
            <div class="col-xl-12 col-md-12">
                <div class="table-responsive">
                    <div class="widget has-shadow">
                        @*<div class="widget-header bordered no-actions d-flex align-items-center">
                            <h4>History</h4>
                        </div>*@
                        <div class="widget-body">
                            <div class="table-responsive">
                                <table id="tblMyApp" class="table table-hover mb-0 display" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>Reference No.</th>
                                            <th>Requester</th>
                                            <th>BD No.</th>
                                            <th>Project No.</th>
                                            <th>Amount (RM)</th>
                                            <th><span style="width:150px;">Application Type</span></th>
                                            @*<th>Submission Date</th>*@
                                            <th><span style="width:130px;">Status</span></th>
                                            <th>Status Date</th>
                                            <th>Action</th>
                                        </tr>
                                        <tr class="filterrow">
                                            <th class="input-filter"><input id="search-refNo" type="text" class="form-control tchatchaca" style="height:40px !important;" placeholder="Search.."></th>
                                            <th class="input-filter"><input id='search-requester' type="text" style="height:40px !important;" class="form-control tchatchaca" placeholder="Search.."></th>
                                            <th class="input-filter"><input id='search-BDNo' type="text" style="height:40px !important;" class="form-control tchatchaca" placeholder="Search.."></th>
                                            <th class="input-filter"><input id="search-projectNo" type="text" style="height:40px !important;" class="form-control tchatchaca" placeholder="Search.."></th>
                                            <th class="input-filter"><input id="search-amount" type="text" style="height:40px !important;" class="form-control tchatchaca" placeholder="Search.."></th>
                                            <th class="select-filter">
                                                <select id="search-applicationType" class="form-control filter" style="height:40px !important;" placeholder="Type">
                                                    <option value=""></option>
                                                    <option value="WangCagaran">Wang Cagaran</option>
                                                    <option value="WangHangus">Wang Hangus</option>
                                                    @*<option value="Cancel">Cancel</option>
                                                    <option value="Recover">Recover</option>
                                                    <option value="Lost">Lost</option>*@
                                                </select>
                                            </th>
                                            @*<th class="input-filter"><input id="search-submitDate" type="text" style="height:40px !important;" class="form-control tchatchaca" placeholder="Search.."></th>*@
                                            <th class="select-filter">
                                                <select id="search-status" class="form-control filter" style="height:40px !important;" placeholder="Status">
                                                    <option value=""></option>
                                                    <option value="Draft">Draft</option>
                                                    <option value="Submitted">Submitted</option>
                                                    <option value="Verified">Verified</option>
                                                    <option value="Approved">Approved</option>
                                                    <option value="Rejected">Rejected</option>
                                                    <option value="Accepted">Accepted</option>
                                                    <option value="Declined">Declined</option>
                                                    <option value="Processed">Processed</option>
                                                    <option value="Issued">Issued</option>
                                                    <option value="Complete">Completed</option>
                                                </select>
                                            </th>
                                            <th class="input-filter"><input id="search-updatedOn" type="text" style="height:40px !important;" class="form-control tchatchaca" placeholder="Search.."></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Container -->
    <!-- Begin Page Footer-->
    <!-- End Page Footer -->
    <a href="#" class="go-top"><i class="la la-arrow-up"></i></a>
    <!-- Offcanvas Sidebar -->
    <!-- End Offcanvas Sidebar -->
</div>

@section Scripts{

    <script src="~/assets/vendors/js/datatables/datatables.min.js"></script>
    <script src="~/assets/vendors/js/datatables/dataTables.select.min.js"></script>
    <script src="~/assets/vendors/js/datatables/dataTables.buttons.min.js"></script>
    <script src="~/assets/vendors/js/datatables/buttons.flash.js"></script>
    <script src="~/assets/vendors/js/datatables/buttons.print.min.js"></script>
