    @*<script src="~/assets/vendors/js/tablefilter/jquery.tableditfixedheader.min.js"></script>*@
    <script>

        $(document).ready(function () {
            $(function () {
                $("nav").addClass("shrinked");
            });
          
                    var table = $('#tblInProgress').DataTable({
                    dom: "Bfrtip",
                        "processing": true,
                        "columnDefs": [
                            { className: "dt-body-right", "targets": [7] },
                        ],
                    //serverSide: true,
                    "ajax": {
                        url:  "@Url.Action("GetMyCancellation", "Application")",
                        type: "GET",
                        data: function (d) {
                            d.refNo = $('#search-refNo').val();
                            d.bdNo = $('#search-bdNo').val();
                            d.projectNo = $('#search-projectNo').val();
                            d.nameOnBd = $('#search-nameOnBd').val();
                            d.requester = $('#search-requester').val();
                            d.coCode = $('#search-coCode').val();
                            d.ba = $('#search-ba').val();
                            d.bdAmount = $('#search-bdAmount').val();
                            d.Status = $('#search-status option:selected').val();
                            d.actionNeeded = $('#search-actionNeeded option:selected').val();
                        },
                        dataFilter: function (result) {
                            var jData = JSON.parse(result);
                            var dtData = JSON.stringify({ "data": jData });
                            return dtData;
                        }
                     },
                    order: [[1, 'asc']],
                    columns: [
                        { data: "refNo" },
                        { data: "bdNo" },
                        { data: "projectNo" },
                        { data: "nameOnBd" },
                        { data: "requester" },
                        { data: "coCode" },
                        { data: "ba" },
                        { data: "bdAmount" },
                        { data: "status" },
                        //{ data: "actionNeeded" },
                        {
                            data: "id",
                            "render": function (data, type, row) {
                                var id = data;
                                var href = "/Cancellation/Edit/" + id;
                                if (type == "display") {
                                    data = '<a href="' + href + '" style="border-radius: 0%;background-color: #f4f4f4;border-color: #ddd;" class="btn btn-lost btn-block mb-2">View</a>';
                                }
                                return data;
                            }
                        }
                    ],
                    "bPaginate": true,
                    "bLengthChange": false,
                    "bFilter": false,
                    "bInfo": true,
                    "bAutoWidth": false,
                    orderCellsTop: true,
                    fixedHeader: true,
                    "lengthChange": false,
            });

            $('#tblInProgress thead filterCol').appendTo('table thead');

            $.each($('.input-filter', table.table().header()), function () {
                var column = table.column($(this).index());

                $('input', this).on('keyup change', function () {
                    table.ajax.reload();
                });
            });

            $.each($('.select-filter', table.table().header()), function () {
                var column = table.column($(this).index());

                $('select', this).on('change', function () {
                    table.ajax.reload();
                });
            });

            $('#tblInProgress').dataTable.ext.errMode = 'throw';

            var table2 = $('#tblCancelled').DataTable({
