@model BDA.ViewModel.LostViewModel
@{

    var statementBank = "";

    if (Model != null)
    {
        statementBank = Model.BankStatementVM.FileName;
    }
}


@section Styles{

    <style>
        .btn-create {
            background-color: #5d5386;
            color: white;
        }

        .btn-apply:hover {
            background-color: white;
            color: black;
        }

        .btn-cancel:hover {
            background-color: red;
            color: white;
        }

        .btn-create:hover {
            background-color: limegreen;
            color: white;
        }

        .btn-lost:hover {
            background-color: #FFC300;
            color: white;
        }

        select.filter {
            height: 33px !important;
        }

        .form-staff {
            margin-bottom: 2rem;
        }
    </style>
}
<div id="pnl_main_form" class="widget-body">
    <div class="padding-left-20 padding-right-20">
        <div class="row flex-row">
            <div class="col-xl-12 col-md-12">
                <div class="table-responsive">
                    <div class="widget has-shadow">
                        <div class="widget-body">
                            <div class="padding-left-20 padding-right-20">
                                <div class="form-group row">
                                    <div class="col-sm-2 form-control-label align-items-center">Received Date<span class="text-danger ml-2">*</span></div>
                                    <div class="col-sm-4">
                                        <div class="input-group">
                                            @*<input type="text" class="form-control date" id="amtReceiveDate" placeholder="Select value">*@
                                            @Html.TextBoxFor(x => x.ReceivedDate, new { @class = "form-control date", required = "required" })
                                            <span class="input-group-addon">
                                                <i class="la la-calendar"></i>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="col-sm-2 form-control-label d-flex align-items-center">Bank Statement<span class="text-danger ml-2">*</span></div>
                                    <div class="col-xl-4">
                                        @if (statementBank == "" || statementBank == null)
                                        {
                                            <div class="file-upload">
                                                @Html.TextBoxFor(m => m.BankStatementVM.File, new { type = "file", name = "StatementBank" })
                                            </div>
                                        }
                                        else
                                        {
                                            var file = statementBank;
                                            <div id="noFile-StatementBank" class="file-upload" style="display:none">
                                                @Html.TextBoxFor(m => m.BankStatementVM.File, new { type = "file", name = "StatementBank" })
                                            </div>
                                            <div id="hasFile-StatementBank">
                                                <input type="hidden" value="@file" id="hdnStatementBank" />
                                                <a onclick="window.open('../../../documents/@file','newwindow','width=900,height=750');"><i class="ti-printer"></i></a>
                                                @*<a id="dustbin" onclick="RemoveAttachment('@Model.BankStatementVM.Id','StatementBank');"><i class="la la-trash delete before-process" data-toggle="tooltip" data-placement="top" data-original-title="Remove attachment"></i></a>*@
                                            </div>
                                        }
                                        @*<div id="uploadBankStatement" class="file-upload before-submit">
            <input id="" name="bankStatement" type="file">
        </div>
        <div id="printBankStatement">
            <a id="btnPrintBankStatement" href="#" class="btn btn-lost" title="View Memo"><i class="ti ti-printer"></i></a>
        </div>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <script src="~/assets/js/components/wizard/form-wizard.min.js"></script>
    <script src="~/assets/vendors/js/bootstrap-select/bootstrap-select.min.js"></script>

    <script src="assets/vendors/js/base/jquery.min.js"></script>
    <script src="assets/vendors/js/base/core.min.js"></script>
    <!-- End Vendor Js -->
    <!-- Begin Page Vendor Js -->
    <script src="assets/vendors/js/nicescroll/nicescroll.min.js"></script>
    <script src="assets/vendors/js/app/app.min.js"></script>
}






