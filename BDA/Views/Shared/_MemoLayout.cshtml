    <script src="~/assets/js/components/datepicker/datepicker.js"></script>
    <script src="~/assets/js/components/wizard/form-wizard.min.js"></script>
    <!-- End Page Js -->
    <script>

        function ShowNoty(_type = "success", _message = "") {
            new Noty({
                type: _type,
                layout: 'topRight',
                text: _message
            }).show().setTimeout(3000);
        }

        function generateSelect(d) {
            var newOption = new Option(d, d, true, true);
            $('#ddlReferenceNo').append(newOption).trigger('change');
            //$('#ddlReferenceNo').each(function () {
            //    var $this = $(this);
            //    $this.find('option').each(function () {
            //        if ($(this).attr('value') == d) {
            //            $(this).attr('disabled', 'disabled');
            //        }
            //    });
            //});
        }
        function SetSelectedValue(_value, _id) {
            var data = { id: 1, text: _value };
            var newOption = new Option(data.text, data.id, false, false);
            $(_id).append(newOption).trigger('change');
        }
        function SetMultiSelectedValue(_value, _id) {

            var _value = _value.split(',');
            var data = _value;
            data.forEach(generateSelect);
        }

    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
