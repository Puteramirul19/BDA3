<div id="pnl_second_form" class="widget-body">
    <div class="padding-left-20 padding-right-20">
        <div class="form-group row ">
            <div class="col-sm-2 form-control-label d-flex align-items-center">
                Reference No.
            </div>
            <div class="col-xl-4 mb-1">
                @Html.TextBoxFor(x => x.RefNo, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group row">
            <div id="lblErmsNo" class="col-sm-2 form-control-label d-flex align-items-center">
                ERMS Document No.
                &nbsp;<i class="ion-information-circled" data-toggle="tooltip" title="Masukkan nombor dokumen ERMS yang telah dipancang"></i>
            </div>
            <div class="col-xl-4">
                @Html.TextBoxFor(x => x.WangHangusViewModel.ErmsDocNo, new { @class = "form-control", disabled = "disabled", id = "ermsNoId", type = "number" })
                @*<input type="text" id="txtERMSDocNo" name="ErmsDocNo" value="@ERMS" class="form-control" disabled>*@
            </div>
            <div id="lblErmsDate" class="col-sm-2 form-control-label align-items-center">Posting Date</div>
            <div class="col-sm-4">
                <div class="input-group">
                    @Html.TextBoxFor(x => x.WangHangusViewModel.PostingDate, new { @class = "form-control date", disabled = "disabled", id = "ermsPostingDate" })
                    <span class="input-group-addon">
                        <i class="la la-calendar"></i>
                    </span>
                </div>
            </div>
        </div>
        <div class="form-group row ">
            <div class="col-sm-2 form-control-label d-flex align-items-center">
                PO Number
                &nbsp;<i class="ion-information-circled" data-toggle="tooltip" title="Related to PO number only"></i>
            </div>
            <div class="col-xl-4 mb-1">
                @Html.TextBoxFor(x => x.WangHangusViewModel.PONumber, new { @class = "form-control" })
            </div>
            <div class="col-sm-2 form-control-label d-flex align-items-center">Date&nbsp;<i class="ion-information-circled" data-toggle="tooltip" title="Tarikh permohonan disediakan"></i><span class="text-danger ml-2">*</span></div>
            <div class="col-xl-4 mb-1">
                <div class="input-group">
                    @Html.TextBoxFor(x => x.WangHangusViewModel.Date, new { @class = "form-control date", id = "dateApply", @required = "required" })
                    <span class="input-group-addon">
                        <i class="la la-calendar"></i>
                    </span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2 form-control-label d-flex align-items-center">Invoice Number&nbsp;<i class="ion-information-circled" data-toggle="tooltip" title="Invoice reference number/PBT reference number/Memo reference number"></i><span class="text-danger ml-2">*</span></div>
            <div class="col-xl-4 mb-1">
                @Html.TextBoxFor(x => x.WangHangusViewModel.InvoiceNumber, new { @class = "form-control", @required = "required" })
            </div>
            <p> </p>
            <div class="col-sm-2 form-control-label d-flex align-items-center">
                Business Area
                &nbsp;<i class="ion-information-circled" data-toggle="tooltip" title="Business Area"></i><span class="text-danger ml-2">*</span>
            </div>
            <div class="col-xl-4 mb-1">
                @*@Html.TextBoxFor(x => x.WangHangusViewModel.BusinessArea, new { @class = "form-control", @required = "required" })*@
                @Html.DropDownListFor(x => x.WangHangusViewModel.BusinessArea, Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", id = "ddlBusinessArea", @required = "required" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2 form-control-label d-flex align-items-center">
                Company Code
                &nbsp;<i class="ion-information-circled" data-toggle="tooltip" title="Company Code"></i><span class="text-danger ml-2">*</span>
            </div>
            <div class="col-xl-4 mb-1">
                @*@Html.TextBoxFor(x => x.WangHangusViewModel.CoCode, new { @class = "form-control", @required = "required" })*@
                @Html.DropDownListFor(x => x.WangHangusViewModel.CoCode, Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", id = "ddlCompanyCode", @required = "required" })
            </div>
            <div class="col-sm-2 form-control-label d-flex align-items-center">
                State (PBT)
                <span class="text-danger ml-2">*</span>
            </div>
            <div class="col-xl-4">
                @Html.DropDownListFor(x => x.WangHangusViewModel.Region, Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", id = "ddlState", required = "required" })
                @*@Html.HiddenFor(x => x.WangCagaranViewModel.Negeri)*@
            </div>

        </div>
        <div class="form-group row">
            <div class="col-sm-2 form-control-label d-flex align-items-center">Vendor No.&nbsp;<i class="ion-information-circled" data-toggle="tooltip" title="Vendor number in ERMS"></i><span class="text-danger ml-2">*</span></div>
            <div class="col-xl-4 mb-1">
                @Html.TextBoxFor(x => x.WangHangusViewModel.VendorNo, new { @class = "form-control", id = "vendorNo", @required = "required" })
                @*Tukar ke texbox jap sebab takde tarik data for vendor lagi*@
                @*@Html.DropDownListFor(x => x.WangHangusViewModel.VendorNo, Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", id = "ddlVendorNo" })*@
                @*@Html.HiddenFor(x => x.WangHangusViewModel.VendorNo)*@
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2 form-control-label d-flex align-items-center">Vendor Name (PBT Name) &nbsp;<i class="ion-information-circled" data-toggle="tooltip" title="Vendor name in ERMS (name on Bank draft)"></i><span class="text-danger ml-2">*</span></div>
            <div class="col-xl-4 mb-1">
                @Html.TextBoxFor(x => x.WangHangusViewModel.VendorName, new { @class = "form-control", @required = "required" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2 form-control-label d-flex align-items-center">Bank Account&nbsp;<i class="ion-information-circled" data-toggle="tooltip" title="If applicable"></i></div>
            <div class="col-xl-4 mb-1">
                @Html.TextBoxFor(x => x.WangHangusViewModel.BankAccount, new { @class = "form-control", id = "bankAccount" })
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2 form-control-label d-flex align-items-center">Bank Country&nbsp;<i class="ion-information-circled" data-toggle="tooltip" title="If applicable"></i></div>
            <div class="col-xl-4 mb-1">
                @Html.DropDownListFor(x => x.WangHangusViewModel.BankCountry, Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", id = "ddlBankCountry" })
                @*@Html.HiddenFor(x => x.WangHangusViewModel.BankCountry)*@
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-2 form-control-label d-flex align-items-center">Description&nbsp;<i class="ion-information-circled" data-toggle="tooltip" title="Maklumat pembayaran"></i><span class="text-danger ml-2">*</span></div>
            <div class="col-xl-10">
                @Html.TextAreaFor(x => x.WangHangusViewModel.Description, new { @class = "form-control", @required = "required" })
            </div>
        </div>
    </div>
</div>
