@model BDA.ViewModel.ZoneViewModel
@{
    ViewData["Title"] = "ManageZone";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles{

    <style>
        .btn-create {
            background-color: #5d5386;
            color: white;
        }

        .btn-apply:hover {
            background-color: white;
