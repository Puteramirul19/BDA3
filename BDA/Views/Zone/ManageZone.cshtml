    <!-- End Container -->
    <!-- Begin Page Footer-->
    <!-- End Page Footer -->
    <a href="#" class="go-top"><i class="la la-arrow-up"></i></a>
    <!-- Offcanvas Sidebar -->
    <!-- End Offcanvas Sidebar -->
</div>

<div id="add-zone-modal" class="modal fade" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered ">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" style="font-weight:bold">Add Zone</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                    <span class="sr-only">close</span>
                </button>
            </div>
            @using (Html.BeginForm("Create", "Zone", Model, FormMethod.Post, false, new { @id = "formAddZone", @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="padding-left-20 padding-right-20">
                        <div class="form-group row">
                            <div class="col-sm-4 form-control-label d-flex align-items-center">Code</div>
                            <div class="col-xl-8">
                                @Html.TextBoxFor(x => x.Code, new { @class = "form-control", required = "required" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-4 form-control-label d-flex align-items-center">Zone</div>
                            <div class="col-xl-8">
                                <select name="Name" id="Name" class="form-control" required = "required">
                                    <option value="East">East</option>
                                    <option value="Kuala Lumpur">Kuala Lumpur</option>
                                    <option value="North">North</option>
                                    <option value="Selangor">Selangor</option>
                                    <option value="South">South</option>
                                </select>
                                @*@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })*@
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-4 form-control-label d-flex align-items-center">Division</div>
                            <div class="col-xl-8">
                                @Html.DropDownListFor(x => x.DivisionId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", id = "ddlDivisionList", required = "required" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-4 form-control-label d-flex align-items-center">Function</div>
                            <div class="col-xl-8">
                                @Html.DropDownListFor(x => x.FunctionId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", id = "ddlFunctionList", required = "required" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnSubmit" type="button" class="btn btn-success">Add</button> @*data-dismiss="modal"*@
                </div>
            }
        </div>
    </div>
</div>

<div id="edit-zone-modal" class="modal fade" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered ">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" style="font-weight:bold">Edit Zone</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                    <span class="sr-only">close</span>
                </button>
            </div>
            @using (Html.BeginForm("Update", "Zone", Model, FormMethod.Post, false, new { @id = "formEditZone", @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="padding-left-20 padding-right-20">
                        <div class="form-group row">
                            <div class="col-sm-4 form-control-label d-flex align-items-center">Code</div>
                            <div class="col-xl-8">
                                @Html.HiddenFor(x => x.Id, new { @id = "idZone", @class = "form-control" })
                                @Html.TextBoxFor(x => x.Code, new { @id = "codeZone", @class = "form-control", required = "required" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-4 form-control-label d-flex align-items-center">Zone</div>
                            <div class="col-xl-8">
                                <select name="Name" id="Name" class="form-control" required = "required">
                                    <option value="East">East</option>
                                    <option value="Kuala Lumpur">Kuala Lumpur</option>
                                    <option value="North">North</option>
                                    <option value="Selangor">Selangor</option>
                                    <option value="South">South</option>
                                </select>
                                @*@Html.TextBoxFor(x => x.Name, new { @id = "nameZone", @class = "form-control" })*@
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-4 form-control-label d-flex align-items-center">Division</div>
                            <div class="col-xl-8">
                                @*@Html.HiddenFor(x => x.DivisionId, new { @id = "idDivision", @class = "form-control" })*@
                                @Html.DropDownListFor(x => x.DivisionId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", @id = "ddlDivisionList2", required = "required" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-4 form-control-label d-flex align-items-center">Function</div>
                            <div class="col-xl-8">
                                @*@Html.HiddenFor(x => x.FunctionId, new { @id = "idFunction", @class = "form-control" })*@
                                @Html.DropDownListFor(x => x.FunctionId, Enumerable.Empty<SelectListItem>(), new { @class = "form-control select2", @id = "ddlFunctionList2", required = "required" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-4 form-control-label d-flex align-items-center">Status</div>
                            <div class="col-xl-8">
                                @Html.CheckBoxFor(x => x.IsActive, new { @id = "statusFunction", @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnEdit" type="button" class="btn btn-success">Update</button> @*data-dismiss="modal"*@
                </div>
            }
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/assets/vendors/js/datatables/datatables.min.js"></script>
    <script src="~/assets/vendors/js/datatables/dataTables.select.min.js"></script>
    <script src="~/assets/vendors/js/datatables/dataTables.buttons.min.js"></script>
    <script src="~/assets/vendors/js/datatables/buttons.flash.js"></script>
    <script src="~/assets/vendors/js/datatables/buttons.print.min.js"></script>
    <script src="~/assets/vendors/js/datatables/buttons.html5.js"></script>

    <script src="~/assets/vendors/js/tablefilter/jquery.tablefilter.js"></script>
    <script src="~/assets/vendors/js/tablefilter/jquery.tabledatafilter.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.validate.js"></script>

    <script>

        var division;
        var fun;

        function refresh() {
            setTimeout(function () { location.reload(); }, 500);
        }

        $("#btnSubmit").on('click', function (e) {
            $("#formAddZone").submit();
        });

        $("#btnEdit").on('click', function (e) {
            console.log('submit');
            $("#formEditZone").submit();
        });

        $(document).ready(function () {

            $("#ddlDivisionList").append("<option value=''>Please choose</option>");
            $("#ddlFunctionList").append("<option value=''>Please choose</option>");

             $('#edit-zone-modal').on('shown.bs.modal', function (e) {

                 var zoneId = $(e.relatedTarget).data('id');
                 var zoneCode = $(e.relatedTarget).data('code');
                 var bulk = $(e.relatedTarget).data('bulk');
                 var funcStatus = $(e.relatedTarget).data('status');

                 var part= bulk;
                 var strs = part.split(",");

                 var zoneName = strs[0];
                 var divId = strs[1];
                 var divName = strs[2];
                 var funcName = strs[3];
                 var funcId = strs[4];
                 //alert(funcName);
                //var divName = $(e.relatedTarget).data('divName');
                 $(".modal-body #idZone").val(zoneId);
                 $(".modal-body #codeZone").val(zoneCode);
                 $(".modal-body #Name").val(zoneName);
                 $(".modal-body #idDivision").val(divId);
                 SetSelectedValue(divName, ".modal-body #ddlDivisionList2");
                 $(".modal-body #idFunction").val(funcId);
                 SetSelectedValue(funcName, ".modal-body #ddlFunctionList2");
                 $(".modal-body #statusFunction").prop('checked', funcStatus);

            });
              var table =   $('#tblDashboard').DataTable({
                    dom: "Bfrtip",
                    "processing": true,
                    //serverSide: true,
                    "ajax": {
                        url:  "@Url.Action("GetAllZones", "Zone")",
                        type: "GET",
                        data: function (d) {
                            d.code = $('#search-code').val();
                            d.name = $('#search-name').val();
                            d.divName = $('#search-divName').val();
                            d.funcName = $('#search-funcName').val();
                            d.status = $('#search-status option:selected').val();
                        },
                        dataFilter: function (result) {
                            var jData = JSON.parse(result);
                            var dtData = JSON.stringify({ "data": jData });
                            return dtData;
                        }
                     },
                    order: [[1, 'asc']],
                    columns: [
                        { data: "code" },
                        { data: "name" },
                        { data: "divName" },
                        { data: "funcName" },
                        {
                            data: "isActive",
                            "render": function (data, type, row) {
                                if (data == true) return "Active";
                                else return "InActive";
                            }
                        },
                        {
                            data: "id",
                            "render": function (data, type, row) {
                                var id = data;
                                var href = "";
                                if (type == "display") {
                                    data = '<a id="test" href="' + href + '" style="border-radius: 0%;background-color: #f4f4f4;border-color: #ddd;" class="btn btn-lost btn-block mb-2" data-target="#edit-zone-modal" data-toggle="modal" data-id="' + id + '" data-code="' + row.code + '" data-bulk="' + row.name + "," + row.divId + "," + row.divName + "," + row.funcName + "," + row.funcId +'" data-status="' + row.isActive + '">Edit</a>';

                                }
                                return data;
                            }
                        },
                    ],
                    "bPaginate": true,
                    "bLengthChange": false,
                    "bFilter": false,
                    "bInfo": true,
                    "bAutoWidth": false,
                    orderCellsTop: true,
                    fixedHeader: true,
                    "lengthChange": false,
            });

            $('.table thead filterCol').appendTo('table thead');

            $.each($('.input-filter', table.table().header()), function () {
                var column = table.column($(this).index());

                $('input', this).on('keyup change', function () {
                    table.ajax.reload();
                });
            });

            $.each($('.select-filter', table.table().header()), function () {
                var column = table.column($(this).index());

                $('select', this).on('change', function () {
                    table.ajax.reload();
                });
            });


            $("#ddlDivisionList").select2({
                dropdownParent: $("#add-zone-modal"),
                minimumResultsForSearch: -1,
                ajax: {
                    url: "/Division/GetAllDivision",
                    dataType: 'json',
                    type: "GET",
                    processResults: function (data) {
                        return {
                            results: $.map(data, function (item) {
                                return {
                                    text: item.name,
                                    id: item.id
                                }

                            })
                        };
                    }
                }
            });

            $('#ddlDivisionList').on('select2:select', function (e) {
                var data = e.params.data;
                if (data.selected) {
                    var id = data.id;
                    division = data.id;
                    //$("#ddlFunctionList").append("<option value=''>Sila Pilih</option>");
                    //$('#spnDivisionId').html(data.id);
                    //$("#ddlFunctionList").select2();

                    $("#ddlFunctionList").select2({
                        dropdownParent: $("#add-zone-modal"),
                        minimumResultsForSearch: -1,
                        ajax: {
                            url: "/Function/GetAllFunctionByDivisionId",
                            dataType: 'json',
                            type: "GET",
                            data: {
                                Id: id
                            },
                            processResults: function (result) {
                                console.log(result);
                                return {
                                    results: $.map(result, function (item) {
                                        return {
                                            text: item.name,
                                            id: item.id
                                        }
                                    })
                                };
                            }
                        }
                    });
                }


                //$('#ddlFunctionList').val($('#ddlFunctionList option:eq(1)').val()).trigger('change');
                //$('#ddlFunctionList option:eq(0)').prop('selected', true);

            });

            $("#ddlDivisionList2").select2({
                dropdownParent: $("#edit-zone-modal"),
                minimumResultsForSearch: -1,
                ajax: {
                    url: "/Division/GetAllDivision",
                    dataType: 'json',
                    type: "GET",
                    processResults: function (data) {
                        return {
                            results: $.map(data, function (item) {
                                return {
                                    text: item.name,
                                    id: item.id
                                }

                            })
                        };
                    }
                }
            });

            $('#ddlDivisionList2').on('select2:select', function (e) {
                var data = e.params.data;
                if (data.selected) {
                    var id = data.id;
                    //$('#spnDivisionId').html(data.id);
                    $("#ddlFunctionList2").select2({
                        dropdownParent: $("#edit-zone-modal"),
                        minimumResultsForSearch: -1,
                        ajax: {
                            url: "/Function/GetAllFunctionByDivisionId",
                            dataType: 'json',
                            type: "GET",
                            data: {
                                Id: id
                            },
                            processResults: function (result) {
                                console.log(result);
                                return {
                                    results: $.map(result, function (item) {
                                        return {
                                            text: item.name,
                                            id: item.id
                                        }
                                    })
                                };
                            }
                        }
                    });
                }
            });

            $('#ddlFunctionList2').on('select2:select', function (e) {
                var data = e.params.data;
                if (data.selected) {
                   fun = data.id;
                }
            });

            $('#ddlDivisionList').on('change', function () {

                var previous = $(this).val();
                if ($('#ddlDivisionList').val() != 1) {
                    $("#ddlFunctionList").empty();
                    $("#ddlFunctionList").append("<option value=''>Please Select</option>");
                }
                else if (previous != $('#ddlDivisionList').val()) {
                    $("#ddlFunctionList").empty();
                    $("#ddlFunctionList").append("<option value=''>Please Select</option>");
                }
                //alert($('#ddlCoCode').val());
            });

            $('#ddlDivisionList2').on('change', function () {

                var previous = $(this).val();
                if ($('#ddlDivisionList2').val() != 1) {
                    $("#ddlFunctionList2").empty();
                    $("#ddlFunctionList2").append("<option value=''>Please Select</option>");
                }
                else if (previous != $('#ddlDivisionList2').val()) {
                    $("#ddlFunctionList2").empty();
                    $("#ddlFunctionList2").append("<option value=''>Please Select</option>");
                }
                //alert($('#ddlCoCode').val());
            });

        });

        $("#formAddZone").submit(function (e) {

            e.preventDefault(); // avoid to execute the actual submit of the form.

            if ($("#formAddZone").valid()) {

                ShowNoty("warning", "Saving Zone..");

                var form = $(this);
                var url = form.attr('action');

                $.ajax({
                    type: "POST",
                    url: url,
                    data: form.serialize(), // serializes the form's elements.
                    success: function (data) {
                        console.log(data);
                        if (data.response.statusCode == 200) {
                            ShowNoty("success", data.message);
                        } else {
                            ShowNoty("error", data.message);
                        }
                        refresh();
                    }
                });
            }

        });

        $("#formEditZone").submit(function (e) {

            e.preventDefault(); // avoid to execute the actual submit of the form.

            if ($("#formEditZone").valid()) {

                ShowNoty("warning", "Updating Zone");

                var form = $(this);
                var url = form.attr('action');
                var fdata = new FormData();

                //// You can update the jquery selector to use a css class if you want
                //, input[type='hidden']
                $("input[type='text']").each(function (x, y) {
                    fdata.append($(y).attr("name"), $(y).val());
                });

                fdata.append("DivisionId", division);
                fdata.append("FunctionId", fun);

                for (var value of fdata.values()) {
                    console.log(value);
                }

                for (var key of fdata.keys()) {
                    console.log(key);
                }

                $.ajax({
                    type: "POST",
                    url: url,
                    data: form.serialize(), // serializes the form's elements.
                    success: function (data) {
                        console.log(data);
                        if (data.response.statusCode == 200) {
                            ShowNoty("success", data.message);
                        } else {
                            ShowNoty("error", data.message);
                        }
                        refresh();
                    }
                });

            }
           
        });

    </script>
}





