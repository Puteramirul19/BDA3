@model BDA.ViewModel.BankDraftViewModel
@{
    var surat = "";
    var umap = "";

    if (Model != null)
    {
        surat = Model.WCSuratKelulusanVM.FileName;
        umap = Model.WCUMAPVM.FileName;
    }

}
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="widget-header d-flex align-items-center" aria-expanded="true">
    <h3>Supporting Document</h3>
</div>
<div id="pnl_document" class="widget-body">
    <div class="table-responsive padding-left-20 padding-right-20">
        <table id="tblListVerifier" class="table table-hover mb-0 display table-bordered">
            <thead>
                <tr>
                    <th style="width:8px">No</th>
                    <th>Name</th>
                    <th style="width:150px">Action</th>
                </tr>

            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>
                        <p>Surat asal kelulusan kerja/permit dan syarat-syarat Pihak Berkuasa Tempatan/Agensi Kerajaan<span class="text-danger ml-2">*</span></p>
                        <p style="color:grey;font-weight:bold">atau</p>
                        <p>Salinan yang diakui sah (Certified True Copy) oleh Pemula yang memperakui atau meluluskan<span class="text-danger ml-2">*</span></p>
                    </td>
                    <td class="td-actions">
                        @if (surat == "" || surat == null)
                        {
                            <div class="file-upload before-submit">
                                @Html.TextBoxFor(m => m.WCSuratKelulusanVM.File, new { type = "file", name = "WCSuratKelulusan" })
                            </div>
                        }
                        else
                        {
                            var file = surat;
                            <div id="noFile-WCSuratKelulusan" class="file-upload" style="display:none">
                                @Html.TextBoxFor(m => m.WCSuratKelulusanVM.File, new { type = "file", name = "WCSuratKelulusan" })
                            </div>
                            <div id="hasFile-WCSuratKelulusan">
                                <table>
                                    <tr>
                                        <td rowspan="2" style="border-collapse: collapse;border:none;"><input type="hidden" value="@file" id="hdnWCSuratKelulusan" /></td>
                                    </tr>
                                    <tr>
                                        <td style="border-collapse: collapse; border:none;"> <a onclick="window.open('../../../documents/@file','newwindow','width=900,height=750');"><i class="ti-printer"></i>@Model.WCSuratKelulusanVM.FileName</a></td>
                                        <td style="border-collapse: collapse; border:none;"><a onclick="RemoveAttachment('@Model.WCSuratKelulusanVM.Id','WCSuratKelulusan');"><i id="trashId1" class="la la-trash delete" data-toggle="tooltip" data-placement="top" data-original-title="Remove attachment"></i></a></td>
                                    </tr>
                                    <tr></tr>
                                </table>
                            </div>
                        }
                        @*href="~/documents/@file" onclick="window.open('../../../documents/@file','newwindow','width=900,height=750)";*@
                        @*<a href="#"><i class="la la-chain" data-toggle="tooltip" data-placement="top" data-original-title="Add attachment" style="display:none"></i></a>
                            <a href="#"><i class="la la-trash delete" data-toggle="tooltip" data-placement="top" data-original-title="Remove attachment" style="display:none"></i></a>
                            <a href="#"><i class="la la-download" data-toggle="tooltip" data-placement="top" data-original-title="Download attachment" style="display:none"></i></a>
                            <a href="#"><i class="ti-printer" style="display:none"></i></a>*@
                </tr>
                <tr>
                    <td>2</td>
                    <td>
                        Utility Mapping (UMAP)
                        <p style="font-style:italic">*optional</p>
                    </td>
                    <td class="td-actions">
                        @if (umap == "" || umap == null)
                        {
                            <div class="file-upload before-submit">
                                @Html.TextBoxFor(m => m.WCUMAPVM.File, new { type = "file", name = "WCUMAP" })
                            </div>
                        }
                        else
                        {
                            var file = umap;
                            <div id="noFile-WCUMAP" class="file-upload" style="display:none">
                                @Html.TextBoxFor(m => m.WCUMAPVM.File, new { type = "file", name = "WCUMAP" })
                            </div>
                            <div id="hasFile-WCUMAP">
                                <table>
                                    <tr>
                                        <td rowspan="2" style="border-collapse: collapse;border:none;"><input type="hidden" value="@file" id="hdnWCUMAP" /></td>
                                    </tr>
                                    <tr>
                                        <td style="border-collapse: collapse; border:none;"> <a onclick="window.open('../../../documents/@file','newwindow','width=900,height=750');"><i class="ti-printer"></i>@Model.WCUMAPVM.FileName</a></td>
                                        <td style="border-collapse: collapse; border:none;"><a onclick="RemoveAttachment('@Model.WCUMAPVM.Id','WCUMAP');"><i id="trashId2" class="la la-trash delete" data-toggle="tooltip" data-placement="top" data-original-title="Remove attachment"></i></a></td>
                                    </tr>
                                    <tr></tr>
                                </table>
                            </div>
                        }
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="widget-header d-flex align-items-center" aria-expanded="true">
    <h3>
        Additional Document
    </h3>
    <div class="col-sm-1 form-control-label d-flex"></div>
</div>
<div id="pnl_first_form" class="widget">
    <div class="padding-left-20 padding-right-20">
        <br /><br />
        <table id="suppDoc" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Attachment</th>
                    <th></th>
                </tr>
            </thead>
        </table>
        <br />
        <button type="button" id="addRow" class="btn btn-secondary ripple">Add Attachment</button>
    </div>
</div>